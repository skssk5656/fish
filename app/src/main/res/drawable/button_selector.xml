<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true" >
        <shape>
            <solid android:color="#FF0000" /> <!-- red when checked -->
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#0000FF" /> <!-- blue when not checked -->
        </shape>
    </item>
</selector>
